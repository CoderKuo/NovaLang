{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string"] },
        { "open": "${", "close": "}", "notIn": ["comment"] },
        { "open": "/**", "close": " */", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*region\\b",
            "end": "^\\s*//\\s*endregion\\b"
        }
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*//.*$",
            "action": { "indent": "none", "appendText": "// " }
        },
        {
            "beforeText": ".*\\{\\s*$",
            "afterText": "^\\s*\\}",
            "action": { "indent": "indentOutdent" }
        },
        {
            "beforeText": ".*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": ".*->\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*\\}\\s*$",
            "action": { "indent": "none" }
        }
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{[^}]*$|^.*->\\s*$",
        "decreaseIndentPattern": "^\\s*\\}"
    },
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
